{
  "files": [],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2024", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true, // 型定義ファイルのチェックをスキップ（高速化）
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./dist"
    // "declaration": true, <-- noEmitがtrueなら不要なので削除またはコメントアウト
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.spec.ts", "**/*.test.ts", "coverage", "**/*.d.ts"],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }]
}
