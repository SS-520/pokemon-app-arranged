{
  "files": [],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2024", "DOM"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true, // 型定義ファイルのチェックをスキップ（高速化）
    "forceConsistentCasingInFileNames": true,
    "noEmit": true // 「ファイルを作らない」という設定
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "**/*.spec.ts", "**/*.test.ts", "coverage"],
  "references": [{ "path": "./tsconfig.app.json" }, { "path": "./tsconfig.node.json" }]
}
